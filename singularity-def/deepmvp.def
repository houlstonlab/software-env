Bootstrap: docker
From: ubuntu:20.04

%post
    apt-get update
    apt-get install -y git python3 python3-pip python3-venv bcftools tabix
    git clone https://github.com/mahshaaban/DeepMVP
    cd DeepMVP
    python3 -m venv venv
    ./venv/bin/pip install --upgrade pip
    ./venv/bin/pip install -r requirements.txt

%environment
    export PATH="/DeepMVP/venv/bin:$PATH"
    export PYTHONPATH="/DeepMVP/:$PYTHONPATH"

%runscript
    exec bcftools "$@"